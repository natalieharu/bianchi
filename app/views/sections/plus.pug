                        p.tracking-wider.text-15.xl_text-base=el.descr

            .btn-booking.flex.justify-center.xl_pt-24.lg_pb-12.items-center.sm_pt-16.pb-7.pt-7
                a.duration-200.hover_text-white.hover_bg-gold.w-48.h-14.text-white.border-2.border-white.text-2xl.tracking-widest.text-center.border-2.border-gold.pt-3(href="#") booking